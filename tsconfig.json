{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "use-vue": [
        "src/index.ts"
      ]
    }
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__"
  ]
}
